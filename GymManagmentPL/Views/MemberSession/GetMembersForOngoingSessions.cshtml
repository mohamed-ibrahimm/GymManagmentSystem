@model IEnumerable<GymManagmentDAL.Entities.Member>

@{
    ViewData["Title"] = "Attendance Sheet";
}

<div class="container">
    <header class="bg-success text-white rounded-3 p-4 shadow-sm mt-5 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1 fw-semibold">Attendance Sheet</h2>
                <p class="mb-0 text-light opacity-75">Mark attendance for current session</p>
            </div>
        </div>
    </header>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Member Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td class="fw-bold">@member.Name</td>
                                <td>
                                    <button class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-check-circle me-1"></i> Mark Present
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No members found</h4>
                </div>
            }
        </div>
        <div class="card-footer bg-white">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to Sessions</a>
        </div>
    </div>
</div>