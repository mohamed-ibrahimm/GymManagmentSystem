@using GymManagmentBLL.ViewModels.MembershipIndexViewModel
@model IEnumerable<MembershipIndexViewModel>

@{
    ViewData["Title"] = "Memberships List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Memberships</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Membership
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No memberships found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Member Name</th>
                        <th>Plan</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MemberName</td>
                            <td>@item.PlanName</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>

                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>